<h1>Edit Task</h1>
<h3><%= @task.title %></h3>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

<%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

